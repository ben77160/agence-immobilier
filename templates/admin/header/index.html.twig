{% extends 'dashboard.html.twig' %}

{% block title %}Header index{% endblock %}

{% block content %}
   <div class="container">
       <div class="mt-5">
           {{ include('admin/flash_message.html.twig') }}
       </div>
       <h1>Header index</h1>

       <table class="table">
           <thead>
           <tr>
               <th>Id</th>
               <th>Titre</th>
               <th>Sous-titre</th>
               <th>Image</th>
               <th>actions</th>
           </tr>
           </thead>
           <tbody>
           {% for header in headers %}
               <tr>
                   <td>{{ header.id }}</td>
                   <td>{{ header.title }}</td>
                   <td>{{ header.subtitle }}</td>
                   <td>
                       <img src="{{ asset('uploads/' ~ header.image) }}" width="100" alt="">
                   </td>
                   <td>
                       <a href="{{ path('header_edit', {'id': header.id}) }}" class="btn btn-primary">Modifier</a>
                       {{ include('admin/header/_delete_form.html.twig') }}
                   </td>
               </tr>
           {% else %}
               <tr>
                   <td colspan="3" class="alert alert-warning">aucun enregistrement trouv√©</td>
               </tr>
           {% endfor %}
           </tbody>
       </table>

       <a href="{{ path('header_new') }}" class="btn btn-primary">Ajouter</a>
   </div>
{% endblock %}
