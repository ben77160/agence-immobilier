<div class="card">
    {% for picture in property.pictures %}
        <img src="{{ asset('uploads/' ~ picture.name) }}" alt="{{ property.title }}" style="width: 100%; height:auto;" >
    {% else%}
        <img src="{{ asset('pictures/empty.jpg') }}" alt="" style="width: 100%; height:auto;" >
    {% endfor %}
    <div class="card-body">
        <h5 class="card-title">{{ property.title}}</h5>
        <p class="card-text">{{ property.surface }} mÂ²</p>
        <p class="card-text">{{ property.city }} - {{ property.postalCode }}</p>
        <p>{{ property.createdAt ? property.createdAt|date('Y-m-d H:i:s') : '' }}</p>

        <div>
            {% for category in property.categories %}
            <em class="text-muted text-primary text-italic">{{ category.name }}</em>
            {% endfor %}
        </div>
        <a href="{{ path('property.show', {'id': property.id} ) }}">Voir</a>
    </div>
</div>