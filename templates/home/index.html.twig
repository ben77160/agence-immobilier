{% extends 'base.html.twig' %}

{% block title %}Voir tous nos biens{% endblock %}

{% block content %}
<div class="container">
    <div class="mt-5">
        {{ include('component/flash_message.html.twig') }}
    </div>
    <h1>Voir tous nos biens</h1>
    <div class="row">
        {% for property in properties %}
        <div class="col-md-4">
            <div class="card mb-4">
                {% for picture in property.pictures %}
                    <div class="col">
                        <img src="{{ asset('uploads/' ~ picture.name) }}" style="width: 100%; height:auto;" alt="{{ property.title }}">
                    </div>
                {% else%}
                    <img src="{{ asset('pictures/empty.jpg') }}" style="width: 100%; height:auto;" alt="">
                {% endfor %}
                <div class="card-body">
                    <h5 class="card-title">{{ property.title}}</h5>
                    <p class="card-text">{{ property.surface }} mÂ²</p>
                    <p class="card-text">{{ property.city }} - {{ property.postalCode }}</p>
                    <p>{{ property.createdAt ? property.createdAt|date('Y-m-d H:i:s') : '' }}</p>
                    <a href="{{ path('property.show', {'id': property.id} ) }}">Voir</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
